@model Ders

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Ders Güncelle</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Ad"></label>
			<input asp-for="Ad" class="form-control" />
			<span asp-validation-for="Ad" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Kredisi"></label>
			<input asp-for="Kredisi" class="form-control" />
			<span asp-validation-for="Kredisi" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="OkulYonetimId"></label>
			<input asp-for="OkulYonetimId" class="form-control" />
			<span asp-validation-for="OkulYonetimId" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Güncelle</button>
		<a asp-controller="Ders" asp-action="DersSayfa" class="btn btn-secondary" style="width:150px">
			Geri Dön
		</a>
	</div>
</form>