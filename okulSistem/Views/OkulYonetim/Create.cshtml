@model OkulYonetim

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Okul Yönetim Tablosuna Ekleme Yap</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="AdSoyad"></label>
			<input asp-for="AdSoyad" class="form-control" />
			<span asp-validation-for="AdSoyad" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Gorevi"></label>
			<input asp-for="Gorevi" class="form-control" />
			<span asp-validation-for="Gorevi" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="YonetimTip"></label>
			<select id="YonetimTip" asp-for="YonetimTip">
				<option value="11">İdare</option>
				<option value="12">Öğretmen</option>
				<option value="13">Öğrenci İşleri</option>
			</select>
			<span asp-validation-for="YonetimTip" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Oluştur</button>
		<a asp-controller="OkulYonetim" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Geri Dön
		</a>
	</div>
</form>